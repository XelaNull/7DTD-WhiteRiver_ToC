			<objective type="RandomGoto" value="1200-2500" phase="1">
				<property name="completion_distance" value="50"/>
				<property name="nav_object" value="quest" />
			</objective>

			<objective type="RallyPoint">
				<property name="start_mode" value="Create"/>
				<property name="phase" value="2"/>
				<property name="nav_object" value="rally" />
			</objective>

			<action type="SpawnEnemy" id="zombieSpiderFeral" value="8" phase="3"/>
			<action type="SpawnEnemy" id="animalBoar" value="2" phase="3"/>
			<objective type="ZombieKill" id="zombieSpiderFeral" value="1" phase="3"/>
			<objective type="StayWithin">
				<property name="phase" value="3"/>
				<property name="radius" value="150"/>
			</objective>

			<action type="SpawnEnemy" id="zombieSpiderFeral" value="1" phase="4"/>
			<action type="SpawnEnemy" id="animalBoar" value="2" phase="4"/>
			<objective type="ZombieKill" id="zombieSpiderFeral" value="1" phase="4"/>
			<objective type="StayWithin">
				<property name="phase" value="4"/>
				<property name="radius" value="150"/>
			</objective>

			<reward type="Exp" value="1000" />
			<reward type="Item" id="schem_toc_chiselanddrift_second" value="1" />
			<reward type="Item" id="elitejournal_dwarven_forge_telchars_autobiography" value="1" />
		</quest>

		<!-- ELITE QUEST (Part 2) -->
		<quest id="+Elite Quest for a Dwarven Forge">
			<property name="name_key" value="elitequest_toc_dwarven_forge"/>
			<property name="subtitle_key" value="elitequest_toc_dwarven_forge_subtitle"/>
			<property name="description_key" value="elitequest_toc_dwarven_forge_description"/>
			<property name="icon" value="ui_game_symbol_map" />
			<property name="repeatable" value="true" />
			<property name="category_key" value="treasure" />
			<property name="difficulty" value="hard" />
			<!-- There should be no offer quest as this quest starts from reading a journal -->
			<property name="offer_key" value="elitequest_toc_dwarven_forge_offer"/>
			<property name="statement_key" value="elitequest_toc_dwarven_forge_statement"/>
