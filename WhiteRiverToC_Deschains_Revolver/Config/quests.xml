<config>
	<append xpath="/quests" >
	
			<quest id="+Quest For Deschain's Revolver">
				<property name="group_name_key" value="questToC_DeschainsRevolver" />
				<property name="offer_key" value="questToC_DeschainsRevolver_offer" />
				<property name="name_key" value="questToC_DeschainsRevolver_name" />
				<property name="subtitle_key" value="questToC_DeschainsRevolver_subtitle" />
				<property name="description_key" value="questToC_DeschainsRevolver_desc" />
				<property name="icon" value="ui_game_symbol_map_trader" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="hard" />
				<property name="shareable" value="false" />
				<property name="repeatable" value="false" />
	
				<objective type="Craft" id="itemToC_DarkTower_First" value="1" phase="1" />
				<objective type="Craft" id="itemToC_DarkTower_Second" value="1" phase="1" />

				<objective type="Fetch" id="secureDoorWooden" value="18" phase="2" />
				<objective type="Fetch" id="vaultDoor01" value="1" phase="2" />

				<objective type="Craft" id="writQuestToC_DeschainsRevolver" value="1" phase="3" />		
	
				<reward type="Exp" value="2500" />
			</quest>


		
			<quest id="+Reward of Deschain's Revolver">
				<property name="group_name_key" value="questToC_DeschainsRevolver" />
				<property name="offer_key" value="rewardToC_DeschainsRevolver_offer"/>
				<property name="name_key" value="rewardToC_DeschainsRevolver_name" />
				<property name="subtitle_key" value="rewardToC_DeschainsRevolver_subtitle" />
				<property name="description_key" value="rewardToC_DeschainsRevolver_desc" />
				<property name="icon" value="ui_game_symbol_map_trader" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="hard" />
				<property name="shareable" value="false" />
				<property name="repeatable" value="false" />

				<objective type="Goto" id="trader" value="5" phase="1" />	
				<objective type="InteractWithNPC">
					<property name="phase" value="2" />
				</objective>
				
				<reward type="Item" id="+White River Citizen Card" value="1" />	<!-- This makes the quest repeatable -->						
				<reward type="Item" id="itemToC_DeschainsRevolver" value="2-6" />
				<reward type="Item" id="blockToC_sealedDeschainsCrate" value="1" />
				<reward type="Item" id="pouredConcreteBlock" value="100-150" />	
				<reward type="Item" id="itemToC_DeschainsHat" value="1" />
				
				<reward type="Exp" value="5000" />
				<reward type="SkillPoints" value="2" />					
			</quest>
	</append>
</config>
