				<property name="icon" value="ui_game_symbol_map_trader" />
				<property name="repeatable" value="false" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="hard" />
				<property name="offer_key" value="quest_toc_desch_offer"/>
				<property name="statement_key" value="quest_toc_desch_statement"/>
				<property name="response_key" value="questdialog_toc_desch"/>
				<property name="group_name_key" value="quest_toc_desch_group"/>
				<property name="shareable" value="false" />

				<objective type="Craft" id="item_toc_desc_book14_name" value="1" phase="1" />
