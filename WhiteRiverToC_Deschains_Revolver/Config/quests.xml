<config>
	<append xpath="/quests" >

			<quest id="+Quest For Deschain's Revolver">
				<property name="group_name" value="quest_ToolsOfCitizenship" />
				<property name="offer" value="Hile, Gunslinger. We seek aid and succor. Find the eight Dark Tower books and craft doors for the nineteen levels of the Tower. Give these to the Trader and he will bequeth you the Revolver of Roland Deschain." />
				<property name="name" value="Quest for Roland Deschain's Revolver" />
				<property name="subtitle" value="Craft the +Writ Of Deschain" />
				<property name="description" value="Craft a Writ of Deschain by collecting all eight books of the Dark Tower Series, then craft 18 wooden doors, and 1 vault door." />
				<property name="icon" value="ui_game_symbol_map_trader" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="hard" />
				<property name="shareable" value="false" />
				<property name="repeatable" value="false" />
	
				<objective type="Craft" id="+The Dark Tower Series Books 1-4" value="1" phase="1" />
				<objective type="Craft" id="+The Dark Tower Series Books 5-8" value="1" phase="1" />
				<objective type="FetchKeep" id="secureDoorWooden" value="18" phase="2" />
				<objective type="FetchKeep" id="vaultDoor01" value="1" phase="2" />
				<objective type="Craft" id="+Writ Of Deschain" value="1" phase="3" />		
				
				<reward type="Exp" value="2500" />
			</quest>
			
			<quest id="+Reward of Deschain's Revolver">
				<property name="group_name" value="quest_ToolsOfCitizenship" />
				<property name="offer" value="I do not kill with my gun; He who kills with his gun has forgotten the face of his father. I kill with my heart. Return to the Trader to take up the gun of Eld."/>
				<property name="name" value="Reward of Deschain's Revolver" />
				<property name="subtitle" value="Reward of Deschain's Revolver" />
				<property name="description" value="Return to the trader to collect your legendary revolver." />
				<property name="icon" value="ui_game_symbol_map_trader" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="hard" />
				<property name="shareable" value="false" />
				<property name="repeatable" value="false" />

				<objective type="Goto" id="trader" value="5" phase="1" />	
				<objective type="InteractWithNPC">
					<property name="phase" value="2" />
				</objective>
				
				<reward type="Item" id="+White River Citizen Card" value="1" />	<!-- This makes the quest repeatable -->						
				<reward type="Item" id="Deschains Revolver" value="2-6" />
				<reward type="Item" id="+Sealed Deschain's Crate" value="1" />
				<reward type="Item" id="pouredConcreteBlock" value="100-150" />	
				<reward type="Item" id="Deschain's Cowboy Hat" value="2-6" />
				<reward type="Exp" value="5000" />
				<reward type="SkillPoints" value="2" />					
			</quest>
	</append>
</config>
