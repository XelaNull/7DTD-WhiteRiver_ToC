<configs>
	<append xpath="/recipes">
		<!-- Ensure the initial declaration is super-easy to craft using items a beginner player probably has -->
		<recipe name="+Declaration_Of_Citizenship" count="1" craft_time = "1" craft_exp_gain="0" >
			<ingredient name="resourcePaper" count="1"/>
		</recipe>	

		<!--
		Quest for Legendary Tools:
			Taza's Axe (Stone + Axes)
			Kuva's Red Armor (Leather)
			Leon's Modded SMG (Pistols) Writ_Of_Leon
			Danara's Flaming Dig Tools (Iron + Pickaxes) Writ_Of_Danara
			Bambi's Killer Bow (Wood + Bows) Writ_Of_Bambi
		-->

		<!-- The quest and goal item to craft for reward for: Leon's Modded SMG -->
		<recipe name="+Quest_For_Leons_Modded_SMG" count="1" craft_time = "1" craft_exp_gain="0" >
			<ingredient name="+Sealed_Citizen_Crate" count="1"/>
		</recipe>
		<recipe name="+Writ_Of_Leon" count="1" craft_time = "90" craft_exp_gain="10000" >
			<ingredient name="gunPistol" count="10"/>
			<ingredient name="resourcePaper" count="1"/>
		</recipe>	


		<!-- The quest and goal item to craft for reward for: Danara's Flaming Pickaxe & Shovel -->
