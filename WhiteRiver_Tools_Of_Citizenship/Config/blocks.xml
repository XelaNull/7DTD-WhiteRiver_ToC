<configs>
	<append xpath="/blocks">
		<!-- Create the blocks for the Sealed Citizen Crate & Citizen Crate items -->
		<block name="+Sealed_Citizen_Crate">
			<property name="CustomIcon" value="cntShippingCrateHero"/>
			<property name="CustomIconTint" value="ffffb3"/>
			<property name="DescriptionKey" value="cntLootCrateHeroDesc"/>
			<property name="Shape" value="ModelEntity"/>
			<property name="Path" value="solid"/>
			<property name="Model" value="Entities/LootContainers/crate_storePrefab" />
			<property name="DisplayInfo" value="Name"/>
			<property name="Material" value="Mwood_regular"/>
			<drop event="Destroy" count="0"/>
			<property name="DowngradeBlock" value="+Citizen_Crate"/>
			<property name="FilterTags" value="floot"/>
		</block>	
		<block name="+Citizen_Crate">
			<property name="CustomIcon" value="cntCardboardBox"/>
			<property name="CustomIconTint" value="333333"/>
			<property name="Extends" value="cntGarageStorage"/>
			<property name="LootList" value="125"/>
		</block>	
	</append>	
</configs>	
	
