<config>
	<append xpath="/quests" >
	
			<quest id="+Quest For Danara's Flaming Dig Tools">
				<property name="group_name" value="quest_ToolsOfCitizenship" />
				<property name="offer" value="There is a crate of digging tools a woman named Danara left at the Trader some time ago and seems to have abandoned. You can have a pair of these tools once you provide the trader with iron replacements." />
				<property name="name" value="Quest to obtain Danara's Flaming Dig Tools" />
				<property name="subtitle_key" value="Craft the +Writ Of Danara" />
				<property name="description_key" value="Collect the needed items and resources to craft a +Writ Of Danara and receive your set of flaming dig tools. You also will receive a small gift to help you re-establish your homestead." />
				<property name="icon" value="ui_game_symbol_map_trader" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="medium" />
				<property name="shareable" value="false" />
				<property name="repeatable" value="true" />
	
				<objective type="FetchKeep" id="resourceIronFragment" value="100" phase="1" />
				<objective type="FetchKeep" id="meleeToolShovelIron" value="10" phase="1" />
				<objective type="FetchKeep" id="meleeToolPickaxeIron" value="10" phase="1" />
				<objective type="FetchKeep" id="resourcePaper" value="1" phase="1" />
				<objective type="Craft" id="+Writ Of Danara" value="1" phase="2" />		
				<objective type="Goto" id="trader" value="5" phase="3" />	
				<objective type="InteractWithNPC">
					<property name="phase" value="4" />
				</objective>	
				<reward type="Item" id="+White River Citizen Card" value="1" />	<!-- This makes the quest repeatable -->						

				<reward type="Item" id="+Writ Of Danara" value="-1" />						
				<reward type="Item" id="Danara's Steel Shovel" value="2-4" />
				<reward type="Item" id="modMeleeClubBurningShaft" value="1" />
				<reward type="Item" id="Danara's Steel Pickaxe" value="2-4" />
				<reward type="Item" id="modMeleeClubBurningShaft" value="1" />
				<reward type="Item" id="pouredConcreteBlock" value="50-100" />	
				<reward type="Exp" value="1000" />
				<reward type="SkillPoints" value="1" />				
			</quest>

			<quest id="+Vet. Quest For Danara's Flaming Dig Tools">
				<property name="group_name" value="quest_ToolsOfCitizenship" />
				<property name="offer" value="There is a crate of digging tools a woman named Danara left at the Trader some time ago and seems to have abandoned. You can have a pair of these tools once you provide the trader with iron replacements." />
				<property name="name" value="Veteran Quest to obtain Danara's Flaming Dig Tools" />
				<property name="subtitle_key" value="Craft the +Veteran Writ Of Danara" />
				<property name="description_key" value="Collect the needed items and resources to craft a +Veteran Writ Of Danara and receive your set of flaming dig tools. You also will receive a small gift to help you re-establish your homestead." />
				<property name="icon" value="ui_game_symbol_map_trader" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="hard" />
				<property name="shareable" value="false" />
				<property name="repeatable" value="true" />
	
				<objective type="FetchKeep" id="resourceIronFragment" value="1000" phase="1" />
				<objective type="FetchKeep" id="meleeToolShovelSteel" value="15" phase="1" />
				<objective type="FetchKeep" id="meleeToolPickaxeSteel" value="15" phase="1" />
				<objective type="FetchKeep" id="resourcePaper" value="1" phase="1" />
				<objective type="Craft" id="+Veteran Writ Of Danara" value="1" phase="2" />		
				<objective type="Goto" id="trader" value="5" phase="3" />	
				<objective type="InteractWithNPC">
					<property name="phase" value="4" />
				</objective>	
				<reward type="Item" id="+White River Citizen Card" value="1" />	<!-- This makes the quest repeatable -->						

				<reward type="Item" id="+Writ Of Danara" value="-1" />						
				<reward type="Item" id="Danara's Steel Shovel" value="4-6" />
				<reward type="Item" id="modMeleeClubBurningShaft" value="1" />
				<reward type="Item" id="Danara's Steel Pickaxe" value="4-6" />
				<reward type="Item" id="modMeleeClubBurningShaft" value="1" />
				<reward type="Item" id="pouredConcreteBlock" value="100-150" />	
				<reward type="Exp" value="5000" />
				<reward type="SkillPoints" value="1" />				
			</quest>
	</append>
</config>
