<configs>
	<append xpath="/items">

		<item name="meleeHandWRDwarf01">
			<property name="Extends" value="meleeHandZombieStrong"/>
			<property name="Range" value="1.1"/>
			<property name="Sphere" value=".8"/>	
			<property class="Action0">
			<property name="DamageEntity" value="35"/>
