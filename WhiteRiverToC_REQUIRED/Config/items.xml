<configs>
	<append xpath="/items">

		<!--
		Quest for White River's Tools of Citizenship:
			Taza's Axe (Stone + Axes)
			Kuva's Red Armor (Leather)
			Leon's Modded SMG (Pistols)
			Ivanka's Flaming Dig Tools (Iron + Pickaxes)
			Bambi's Killer Bow (Wood + Bows)
			Everdeen's Arrows and Bolts (Food for Ammo)
			Dundee's Knife (Bone Shiv)
			Jason's Machete (Knives)
		-->

		<!-- This is crafted freely by the player to kick off the 10-Zombie Challenge -->
		<item name="+Declaration Of Citizenship">
			<property name="CustomIcon" value="questMaster"/>
			<property name="CustomIconTint" value="a4ff84"/>
			<property name="Extends" value="questMaster"/>
			<property name="Stacknumber" value="1"/>
			<property name="Weight" value="0"/>			
			<property name="Group" value="Special Items"/>
			<property name="Description" value="White River Tools of Citizenship\n\nDeclaration of Citizenship\n\nUsed to begin the quest to obtain your own Citizen's Card from killing 10 Zombies."/>
			<property class="Action0">
				<property name="Class" value="Quest"/>
				<property name="QuestGiven" value="quest_whiteRiverCitizen3"/>
				<property name="Delay" value="0"/>
			</property>	
		</item>		
		
		<item name="+White River Citizen Card">
			<property name="CustomIcon" value="resourcePaper"/>
			<property name="CustomIconTint" value="2eb200"/>
			<property name="Extends" value="resourcePaper"/>
			<property name="Stacknumber" value="1"/>
			<property name="Weight" value="0"/>			
			<property name="Group" value="Special Items"/>
			<property name="Description" value="White River Citizen's Card\n\nUsed to prove your membership into the settlement and obtain settlement quests."/>
		</item>
		
		<item name="+White River Veteran 100Z Challenge">
			<property name="CustomIcon" value="resourcePaper"/>
			<property name="CustomIconTint" value="660000"/>
			<property name="Extends" value="resourcePaper"/>
			<property name="Stacknumber" value="1"/>
			<property name="Weight" value="0"/>			
			<property name="Group" value="Special Items"/>
			<property name="Description" value="A quest to kill 100 zombies in exchange for a White River settlement Veterans Citizen card."/>
			<property class="Action0">
				<property name="Class" value="Quest"/>
				<property name="QuestGiven" value="+Kill 100 Zombies"/>
				<property name="Delay" value="0"/>
			</property>	
		</item>		
		
		<item name="+White River Veteran Citizen Card">
			<property name="CustomIcon" value="resourcePaper"/>
			<property name="CustomIconTint" value="7fa6ff"/>
			<property name="Extends" value="resourcePaper"/>
			<property name="Stacknumber" value="1"/>
			<property name="Weight" value="0"/>			
			<property name="Group" value="Special Items"/>
			<property name="Description" value="White River Veteran Vitizen's Card\n\nUsed to prove your veteran membership into the settlement and obtain settlement veteran quests."/>
		</item>
	</append>
</configs>