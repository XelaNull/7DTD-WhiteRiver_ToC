  <!-- Adjust the original items displayed advantage as they aren't accurate -->
  <set xpath="/items/item[@name='toolBellows']/effect_group/display_value[@name='dCraftingSmeltTime']/@value">.33</set>
  <set xpath="/items/item[@name='toolAnvil']/effect_group/display_value[@name='dCraftingTime']/@value">.33</set>

  
  <!-- ######################## -->
