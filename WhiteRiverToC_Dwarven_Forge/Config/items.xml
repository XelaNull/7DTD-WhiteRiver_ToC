<config>
  <append xpath="/items">
    <item name="schem_toc_dwarventools">
    	<property name="Extends" value="schematicMaster"/>
    	<property name="CreativeMode" value="Player"/>
    	<property name="CustomIcon" value="forge"/>
      <property name="CustomIconTint" value="1e9403"/> 
      <property name="Stacknumber" value="1"/> 
    	<property name="Unlocks" value="ingotBundleForgedSteel"/>
    	<effect_group tiered="false">
    		<triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="ingotBundleForgedSteel" operation="set" value="1"/>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="ingotBundleForgedIron" operation="set" value="1"/>        
    		<triggered_effect trigger="onSelfPrimaryActionEnd" action="GiveExp" exp="500"/>
    	</effect_group>
    </item>

    <item name="resourceDwarvenForgedSteel">
      <property name="CustomIcon" value="resourceForgedSteel"/>
      <property name="CustomIconTint" value="1e9403"/> 
    	<property name="HoldType" value="45"/>
    	<property name="Meshfile" value="#Other/Items?Misc/sackPrefab.prefab"/>
    	<property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
    	<property name="Material" value="MresourceForgedSteel"/>
    	<property name="Stacknumber" value="50"/>
    	<property name="EconomicValue" value="50"/>
    	<property name="Group" value="Resources"/>
    	<property name="CraftingIngredientTime" value="15"/>
    	<property name="RepairTime" value="1"/>
    	<property name="RepairAmount" value="400"/>
    </item>

    <item name="toolDwarvenBellows">
      <property name="Extends" value="toolBellows"/>
      <property name="CustomIcon" value="toolBellows"/>
      <property name="CustomIconTint" value="1e9403"/> 
    	<property name="HoldType" value="45"/>
    	<property name="Meshfile" value="#Other/Items?Misc/sackPrefab.prefab"/>
    	<property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
    	<property name="Material" value="MtoolBellows"/>
    	<property name="Stacknumber" value="1"/> 
    	<property name="Weight" value="100"/>
    	<property name="EconomicValue" value="5000"/>
    	<property name="Group" value="Tools/Traps"/>
    	<property name="DisplayType" value="toolBellows"/>
    	<property name="ItemTypeIcon" value="forge"/>
    	<effect_group tiered="false">
    		<passive_effect name="CraftingSmeltTime" operation="perc_add" value="-.777"/>
    		<display_value name="dCraftingSmeltTime" value=".77"/>
    	</effect_group>
    </item>
    
    <item name="toolDwarvenAnvil">
      <property name="CustomIcon" value="toolAnvil"/>
      <property name="CustomIconTint" value="1e9403"/> 
    	<property name="Tags" value="toolAnvil"/>
    	<property name="HoldType" value="45"/>
    	<property name="Meshfile" value="#Other/Items?Misc/sackPrefab.prefab"/>
    	<property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
    	<property name="Material" value="Msteel"/>
    	<property name="Weight" value="200"/>
    	<property name="Stacknumber" value="1"/>
    	<property name="EconomicValue" value="2500"/>
    	<property name="Group" value="Tools/Traps"/>
    	<property name="DisplayType" value="toolAnvil"/>
    	<property name="ItemTypeIcon" value="forge"/>
    	<effect_group tiered="false">
    		<passive_effect name="CraftingTime" operation="perc_add" value="-.5"/>
    		<display_value name="dCraftingTime" value=".5"/>
    	</effect_group>
    </item>
    
    <item name="toolDwarvenCrucible">
      <property name="CustomIcon" value="toolForgeCrucible"/>
      <property name="CustomIconTint" value="1e9403"/> 
    	<property name="HoldType" value="45"/>
    	<property name="Meshfile" value="#Other/Items?Misc/sackPrefab.prefab"/>
    	<property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
    	<property name="Material" value="Msteel"/>
    	<property name="Stacknumber" value="1"/>
    	<property name="Group" value="Tools/Traps"/>
    	<property name="EconomicValue" value="2500"/>
    	<property name="SellableToTrader" value="false"/>
    	<property name="ItemTypeIcon" value="forge"/>
    </item>
    
    
    <item name="toolDwarvenDieSet">
      <property name="CustomIcon" value="toolAndDieSet"/>
      <property name="CustomIconTint" value="1e9403"/> 
      <property name="HoldType" value="45"/>
      <property name="Meshfile" value="#Other/Items?Misc/sackPrefab.prefab"/>
      <property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
      <property name="Material" value="Msteel"/>
      <property name="Weight" value="30"/>
      <property name="Stacknumber" value="1"/>
      <property name="EconomicValue" value="2500"/>
      <property name="Group" value="Tools/Traps"/>
      <property name="ItemTypeIcon" value="forge"/>
    </item>
    
    <item name="toolDwarvenTools">
      <property name="CustomIcon" value="cntToolBoxOpen"/>
      <property name="CustomIconTint" value="2fff00"/> 
    	<property name="HoldType" value="45"/>
    	<property name="Meshfile" value="#Other/Items?Misc/sackPrefab.prefab"/>
    	<property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
    	<property name="Material" value="Msteel"/>
    	<property name="Weight" value="5"/>
    	<property name="Stacknumber" value="1"/>
    	<property name="Group" value="Tools/Traps"/>
    	<property name="EconomicValue" value="2500"/>
      <property name="ItemTypeIcon" value="forge"/>
    </item>
