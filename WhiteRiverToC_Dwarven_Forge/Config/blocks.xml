    <block name="trapSpikesSteelDmg0">
      <property name="Extends" value="trapSpikesSteelMaster"/>
      <property name="Material" value="MstainlessSteel"/>
      <property name="Texture" value="150"/>
      <property name="CustomIconTint" value="ffffff"/>
      <property name="TintColor" value="255,255,255"/>
      <property name="Map.Color" value="255,255,255"/>
      <property name="CustomIcon" value="trapSpikesScrapIronMaster"/>
      <property name="DowngradeBlock" value="trapSpikesSteelDmg1"/>
