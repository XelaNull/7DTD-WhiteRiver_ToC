<config>
	<append xpath="/quests" >
			<quest id="+Quest For Leon's Modded SMG">
				<property name="group_name" value="quest_ToolsOfCitizenship" />
				<property name="offer" value="There is a crate of modded weapons at the Trader that a guy named Leon left behind and hasn't come back for in a long time. You can have one of these weapons once you provide pistols that the Trader can hand out to other survivors." />
				<property name="name" value="Pay-it-forward to obtain Leon's Modded SMG" />
				<property name="subtitle_key" value="Craft the +Writ Of Leon" />
				<property name="description_key" value="Collect the needed weapons and craft a +Writ Of Leon to receive your SMG. You also will receive a small gift to help you re-establish your homestead." />
				<property name="icon" value="ui_game_symbol_map_trader" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="medium" />
				<property name="shareable" value="false" />
				<property name="repeatable" value="true" />
	
				<objective type="FetchKeep" id="gunPistol" value="10" phase="1" />
				<objective type="FetchKeep" id="resourcePaper" value="1" phase="1" />
				<objective type="Craft" id="+Writ Of Leon" value="1" phase="2" />		
				<reward type="Item" id="+White River Citizen Card" value="1" />	<!-- This makes the quest repeatable -->						

				<reward type="Item" id="+Writ Of Leon" value="-1" />						
				<reward type="Item" id="Leon's SMG5" value="3-5" />
				<reward type="Item" id="modGunForegrip" value="1" /> 				
				<reward type="Item" id="modGunMagazineExtender" value="1" />
				<reward type="Item" id="modGunFlashSuppressor" value="1" />	
				<reward type="Item" id="ammo9mmBullet" value="250" />
				<reward type="Item" id="pouredConcreteBlock" value="100" />	
				<reward type="Exp" value="1000" />
				<reward type="SkillPoints" value="1" />				
			</quest>
	</append>
</config>
