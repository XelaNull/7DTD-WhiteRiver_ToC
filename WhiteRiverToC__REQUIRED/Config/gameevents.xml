<Config>
    <insertAfter xpath="/gameevents/action_sequence[@name='challenge_group_reward_basics']">
    	<action_sequence name="challenge_group_reward_toc_basic">
            <property name="allow_user_trigger" value="false" />
            <property name="action_type" value="Game" />
                    
            <action class="Delay">
                <property name="time" value="2" />
            </action>
            
            <action class="AddQuest">
                <property name="phase" value="1" />
                <property name="quest" value="quest_whiteRiverCitizen2" />
            </action>
    	</action_sequence>
    	<action_sequence name="challenge_group_reward_toc_veteran">
            <property name="allow_user_trigger" value="false" />
            <property name="action_type" value="Game" />
                    
            <action class="Delay">
                <property name="time" value="2" />
            </action>
            
            <action class="AddQuest">
                <property name="phase" value="1" />
                <property name="quest" value="+Kill 100 Zombies" />
            </action>
    	</action_sequence>
    	<action_sequence name="challenge_group_reward_toc_elite">
            <property name="allow_user_trigger" value="false" />
            <property name="action_type" value="Game" />
                    
            <action class="Delay">
                <property name="time" value="2" />
            </action>
            
            <action class="AddQuest">
                <property name="phase" value="1" />
                <property name="quest" value="+Kill 1000 Zombies" />
            </action>
    	</action_sequence>                
    </insertAfter>
</Config>