<config>
	<append xpath="/quests" >

			<quest id="+Quest For Gupta's Bandages">
				<property name="group_name" value="quest_ToolsOfCitizenship" />
				<property name="offer" value="The Trader mentioned a local Doctor needs the ingredients for first aid bandages but she is so busy treating the injured she doesn't have time to collect them herself. She is willing to offer you first aid bandages in exchange." />
				<property name="name" value="Collect Aloe for Gupta's Bandages" />
				<property name="subtitle_key" value="Collect Aloe for Gupta's Bandages" />
				<property name="description_key" value="Collect the aloe leaves for Dr. Gupta to craft first aid bandages. You will be given first aid bandages in return for your effort. " />
				<property name="icon" value="ui_game_symbol_map_trader" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="veryeasy" />
				<property name="shareable" value="false" />
				<property name="repeatable" value="true" />
	
				<objective type="FetchKeep" id="resourceCropAloeLeaf" value="24" phase="1" />
				<objective type="FetchKeep" id="resourceCropCottonPlant" value="40" phase="1" />
				<objective type="Goto" id="trader" value="5" phase="2" />	
				<objective type="InteractWithNPC">
					<property name="phase" value="3" />
				</objective>	
				<reward type="Item" id="+White River Citizen Card" value="1" />	<!-- This makes the quest repeatable -->						
				<reward type="Item" id="medicalBandage" value="2-3" />
				<reward type="Exp" value="500" />
				<reward type="SkillPoints" value="1" />				
			</quest>
					
	</append>
</config>
