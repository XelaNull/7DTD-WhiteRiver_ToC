<config>
	<append xpath="/quests" >

			<!-- ELITE QUEST -->
			<quest id="+Elite Quest For Remington's Steel Ammo">
				<property name="group_name" value="quest_ToolsOfCitizenship" />
				<property name="offer" value="The White River community is in desperate need of large quantities of ammunition to help fend off the horde. If you can provide 1000 7.62, 1000 44 Magnum, and 1000 9mm bullets, they will teach you the secret to crafting steel ammunition. Gather 1000 7.62, 1000 9mm, and 1000 44Magnum" />
				<property name="name" value="Elite Quest to obtain Remington's Steel Ammo Recipe" />
				<property name="subtitle" value="Obtain Steel Ammo Recipe" />
				<property name="description" value="Gather 1000 762 ammo, 1000 9mm ammo, and 1000 44 Magnum ammo to obtain Remington's Recipe for Steel Ammo" />
				<property name="icon" value="ui_game_symbol_map_trader" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="hard" />
				<property name="shareable" value="false" />
				<property name="repeatable" value="true" />
	
				<objective type="FetchKeep" id="ammo762mmBulletBall" value="1000" phase="1" />
				<objective type="FetchKeep" id="ammo44MagnumBulletBall" value="1000" phase="1" />
				<objective type="FetchKeep" id="ammo9mmBulletBall" value="1000" phase="1" />
				<objective type="FetchKeep" id="resourcePaper" value="1" phase="1" />
				<objective type="Craft" id="+Elite Writ Of Remington" value="1" phase="2" />		

				<reward type="Exp" value="5000" />
			</quest>		
			
			<quest id="+Elite Reward of Remington's Steel Ammo">
				<property name="group_name" value="quest_ToolsOfCitizenship" />
				<property name="offer" value="Your assistance in collecting ammo to protect your community is truly appreciated. Learn how to make Remington's Steel Ammo from the Trader."/>
				<property name="name" value="Elite Reward of Remington's Steel Ammo" />
				<property name="subtitle" value="Elite Reward of Remington's Steel Ammo" />
				<property name="description" value="Now that you have collected the needed items, return the trader to collect your reward." />
				<property name="icon" value="ui_game_symbol_map_trader" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="easy" />
				<property name="shareable" value="false" />
				<property name="repeatable" value="true" />
				<property name="completiontype" value="TurnIn" />
	
				<objective type="Goto" value="5" phase="1" />
				<objective type="ReturnToNPC">
					<property name="phase" value="2"/>
					<property name="nav_object" value="return_to_trader" />
				</objective>
				<objective type="InteractWithNPC">
					<property name="phase" value="3" />
					<property name="nav_object" value="return_to_trader" />										
				</objective>
				
				<reward type="Item" id="+White River Citizen Card" value="1" />	<!-- This makes the quest repeatable -->						
				<reward type="Item" id="Remington's Steel Bullet Casing Schematic" value="1" />
				<reward type="Item" id="Remington's Steel 762mm Bullet Schematic" value="1" />
				<reward type="Item" id="Remington's Steel 44Magnum Bullet Schematic" value="1" />
				<reward type="Item" id="Remington's Steel 9mm Bullet Schematic" value="1" />
				<reward type="Exp" value="5000" />
				<reward type="SkillPoints" value="2" />				
			</quest>
			
	</append>
</config>
