				<property name="description_key" value="quest_toc_bunyan_description"/>
				<property name="icon" value="ui_game_symbol_map_trader" />
				<property name="repeatable" value="true" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="easy" />
				<property name="offer_key" value="quest_toc_bunyan_offer"/>
				<property name="statement_key" value="quest_toc_bunyan_statement"/>
				<property name="response_key" value="questdialog_toc_bunyan"/>				
				<property name="group_name_key" value="quest_toc_bunyan_group"/>
				<property name="shareable" value="false" />
	
				<objective type="FetchKeep" id="drinkJarBoiledWater" value="50" phase="1" />
