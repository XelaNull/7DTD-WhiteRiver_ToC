				<property name="category_key" value="quest" />
				<property name="difficulty" value="easy" />
				<property name="offer_key" value="questreward_toc_bunyan_offer"/>
				<property name="statement_key" value="questreward_toc_bunyan_statement"/>
				<property name="response_key" value="questrewarddialog_toc_bunyan"/>				
				<property name="group_name_key" value="quest_toc_taza_group"/>
				<property name="shareable" value="false" />
				<property name="completiontype" value="TurnIn" />
	
				<objective type="Goto" value="5" phase="1" />
