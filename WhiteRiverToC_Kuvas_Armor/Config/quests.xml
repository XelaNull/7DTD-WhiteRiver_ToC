        <reward type="Item" id="questitem_toc_citizencard_name" value="1" />	<!-- This makes the quest repeatable -->
        <reward type="Item" id="vetmap_toc_kuva_name" value="1" />
      </quest>
      <quest id="treasure_kuva">
				<property name="name_key" value="questmap_toc_kuva_name"/>
				<property name="subtitle_key" value="questmap_toc_kuva_subtitle"/>
				<property name="description_key" value="questmap_toc_kuva_desc"/>
				<property name="icon" value="ui_game_symbol_map" />
				<property name="repeatable" value="true" />
				<property name="category_key" value="treasure" />
				<property name="difficulty" value="hard" />
				<property name="offer_key" value="questmap_toc_kuva_offer"/>
				<property name="statement_key" value="questmap_toc_kuva_statement"/>
				<property name="response_key" value="questmapdialog_toc_kuva"/>
				<property name="group_name_key" value="vetquest_toc_kuva_group"/>
				<property name="shareable" value="false" />

    		<objective type="TreasureChest">
    			<property name="block" value="treasureKuvaChest"/>
    			<property name="distance" value="1500-2500"/>
					<property name="default_radius" value="9"/>
					<property name="nav_object" value="treasure" />
					<property name="direct_nav_object" value="treasure_direct" />
					<property name="blocks_per_reduction" value="10" />
						<!-- Perk/item can reduce this by 8. Change perk/item to a % based effect if a blocks_per_reduction less than 10 that is desired. -->
					<property name="radius_reduction_sound" value="ui_radius_shrink" />
    		</objective>
        <reward type="Quest" id="+Kuva's Secret Recipe Challenge"/>
				<reward type="Item" id="item_toc_kuvaliner_name" value="1-3" />
				<reward type="Item" id="item_toc_kuvatwine_name" value="1"/>
				<reward type="Item" id="item_toc_kuvatallow_name" value="0-1"/>
				<reward type="Exp" value="2000"/>
    	</quest>

      <quest id="+Kuva's Secret Recipe Challenge">
				<property name="name_key" value="quest_toc_kuvasecret_name"/>
				<property name="subtitle_key" value="quest_toc_kuvasecret_subtitle"/>
				<property name="description_key" value="quest_toc_kuvasecret_desc"/>
