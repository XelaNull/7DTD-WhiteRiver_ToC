<config>
	<append xpath="/quests" >

			<quest id="+Quest For Kuva's Red Armor">
				<property name="group_name" value="quest_ToolsOfCitizenship" />
				<property name="offer" value="The Trader offered you their own homemade secret recipe to create what is called Kuva's Red Armor. It is rumored that Kuva's Red Armor renders the wearer's movements near silent, has an additional mod slot, and comes paired with improved insulation. But first you must prove yourself worthy. Gather 50 Leather + Craft 2 Leather Ponchos" />
				<property name="name" value="Quest to craft Kuva's Red Armor" />
				<property name="subtitle_key" value="Craft the +Writ Of Kuva" />
				<property name="description_key" value="questKuvasRedArmor" />
				<property name="icon" value="ui_game_symbol_map_trader" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="easy" />
				<property name="shareable" value="false" />
				<property name="repeatable" value="true" />
	
				<objective type="FetchKeep" id="resourceLeather" value="50" phase="1" />
				<objective type="FetchKeep" id="apparelCoatLeatherPoncho" value="2" phase="1" />
				<objective type="FetchKeep" id="resourcePaper" value="1" phase="1" />
				<objective type="Craft" id="+Writ Of Kuva" value="1" phase="2" />			
	
				<reward type="Exp" value="2500" />
			</quest>
			
			<quest id="+Reward of Kuva's Red Armor">
				<property name="group_name" value="quest_ToolsOfCitizenship" />
				<property name="offer" value="Turn in your leather and ponchos to the Trader in exchange for a set of Kuva's Red Armor."/>
				<property name="name" value="Reward of Kuva's Red Armor" />
				<property name="subtitle_key" value="Reward of Kuva's Red Armor" />
				<property name="description_key" value="questRewardKuvsasArmor" />
				<property name="icon" value="ui_game_symbol_map_trader" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="easy" />
				<property name="shareable" value="false" />
				<property name="repeatable" value="true" />

				<objective type="Goto" id="trader" value="5" phase="2" />	
				<objective type="InteractWithNPC">
					<property name="phase" value="3" />
				</objective>
				
				<reward type="Item" id="+White River Citizen Card" value="1" />	<!-- This makes the quest repeatable -->						
				<reward type="Item" id="Kuva's Red Leather Hood" value="2-4" />
				<reward type="Item" id="Kuva's Red Leather Chest" value="2-4" />
				<reward type="Item" id="Kuva's Red Leather Gloves" value="2-4" />
				<reward type="Item" id="Kuva's Red Leather Pants" value="2-4" />
				<reward type="Item" id="Kuva's Red Leather Boots" value="2-4" />
				<reward type="Item" id="pouredConcreteBlock" value="50-100" />	
				<reward type="Exp" value="2500" />
				<reward type="SkillPoints" value="1" />						
			</quest>

			<quest id="+Vet. Quest For Kuva's Red Armor">
				<property name="group_name" value="quest_ToolsOfCitizenship" />
				<property name="offer" value="The Trader accidentally let slip the secret to crafting Kuva's Red Armor with much higher quality. The Trader offered to craft you one of these, if you agree to keep his secret quiet. Gather 200 Leather + 150 Iron + 10 Leather Chests" />
				<property name="name" value="Veteran Quest to craft Legendary Kuva's Red Armor" />
				<property name="subtitle_key" value="Craft the +Veteran Writ Of Kuva" />
				<property name="description_key" value="questVetKuvasRedArmor" />
				<property name="icon" value="ui_game_symbol_map_trader" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="hard" />
				<property name="shareable" value="false" />
				<property name="repeatable" value="true" />
	
				<objective type="FetchKeep" id="resourceLeather" value="200" phase="1" />
				<objective type="FetchKeep" id="resourceIronFragment" value="150" phase="1" />
				<objective type="FetchKeep" id="armorLeatherChest" value="10" phase="1" />
				<objective type="FetchKeep" id="resourcePaper" value="1" phase="1" />
				<objective type="Craft" id="+Veteran Writ Of Kuva" value="1" phase="2" />		
				<reward type="Exp" value="5000" />
			</quest>
			
			<quest id="+Veteran Reward of Kuva's Red Armor">
				<property name="group_name" value="quest_ToolsOfCitizenship" />
				<property name="offer" value="Your secrecacy is appreciated. In exchange for your silence, the Trader will accept your supplies and create you a set of Kuva's Red Armor."/>
				<property name="name" value="Veteran Reward of Kuva's Red Armor" />
				<property name="subtitle_key" value="Veteran Reward of Kuva's Red Armor" />
				<property name="description_key" value="questRewardVetKuvasRedArmor" />
				<property name="icon" value="ui_game_symbol_map_trader" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="easy" />
				<property name="shareable" value="false" />
				<property name="repeatable" value="true" />

				<objective type="Goto" id="trader" value="5" phase="2" />	
				<objective type="InteractWithNPC">
					<property name="phase" value="3" />
				</objective>
				
				<reward type="Item" id="+White River Citizen Card" value="1" />	<!-- This makes the quest repeatable -->						
				<reward type="Item" id="Kuva's Red Leather Hood" value="4-6" />
				<reward type="Item" id="Kuva's Red Leather Chest" value="5-6" />
				<reward type="Item" id="Kuva's Red Leather Gloves" value="4-6" />
				<reward type="Item" id="Kuva's Red Leather Pants" value="5-6" />
				<reward type="Item" id="Kuva's Red Leather Boots" value="4-6" />
				<reward type="Item" id="+Sealed Kuva's Veteran Crate" value="1" />
				<reward type="Item" id="pouredConcreteBlock" value="100-200" />	
				<reward type="Exp" value="5000" />
				<reward type="SkillPoints" value="2" />					
			</quest>
						
	</append>
</config>
