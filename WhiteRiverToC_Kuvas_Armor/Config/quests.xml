				<property name="group_name_key" value="quest_toc_disckuva_group"/>
				<property name="shareable" value="false" />

        <reward type="Exp" value="500" />
      </quest>


      <!-- VETERAN QUESTLINE -->
      <quest id="+Vet. Quest For Kuva's Red Armor">
				<property name="name_key" value="vetquest_toc_kuva_name"/>
				<property name="subtitle_key" value="vetquest_toc_kuva_subtitle"/>
				<property name="description_key" value="vetquest_toc_kuva_desc"/>
