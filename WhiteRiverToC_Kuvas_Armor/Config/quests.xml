				<property name="repeatable" value="true" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="easy" />
				<property name="offer_key" value="questreward_toc_kuva_offer"/>
				<property name="statement_key" value="questreward_toc_kuva_statement"/>
				<property name="response_key" value="questrewarddialog_toc_kuva"/>
				<property name="group_name_key" value="quest_toc_kuva_group"/>
				<property name="shareable" value="false" />
				<property name="completiontype" value="TurnIn" />

				<objective type="Goto" value="5" phase="1" />
				<objective type="ReturnToNPC">
					<property name="phase" value="2"/>
					<property name="nav_object" value="return_to_trader" />
				</objective>
				<objective type="InteractWithNPC">
					<property name="phase" value="3" />
					<property name="nav_object" value="return_to_trader" />
				</objective>

				<reward type="Item" id="questitem_toc_citizencard_name" value="1" />	<!-- This makes the quest repeatable -->
				<reward type="Item" id="item_toc_kuvared_chest_name" value="1-2" />
				<reward type="Item" id="item_toc_kuvared_legs_name" value="1-2" />
				<reward type="Item" id="concreteShapesBlock" value="10-50" />
				<reward type="Exp" value="2500" />
        <reward type="Quest" id="+Discover Kuva's Red Armor"/>
			</quest>

      <!-- +Discover Kuva's Red Armor -->
      <quest id="+Discover Kuva's Red Armor">
				<property name="name_key" value="quest_toc_disckuva_name"/>
				<property name="subtitle_key" value="quest_toc_disckuva_subtitle"/>
				<property name="description_key" value="quest_toc_disckuva_desc"/>
