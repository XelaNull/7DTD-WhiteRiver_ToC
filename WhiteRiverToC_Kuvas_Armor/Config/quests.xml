        <action type="SpawnEnemy" id="zombieKuvaAssistant" value="3" phase="1"/>
        <objective type="ZombieKill" id="zombieKuvaAssistant" value="1" phase="1"/>
				<action type="SpawnEnemy" id="zombieKuvaAssistant" value="2" phase="2"/>
        <objective type="ZombieKill" id="zombieKuvaAssistant" value="1" phase="2"/>

