			<quest id="+Reward of Kuva's Red Armor">
				<property name="name_key" value="questreward_toc_kuva_name"/>
				<property name="subtitle_key" value="questreward_toc_kuva_subtitle"/>
				<property name="description_key" value="questreward_toc_kuva_desc"/>
