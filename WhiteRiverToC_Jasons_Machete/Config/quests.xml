<config>
	<append xpath="/quests" >

			<quest id="+Quest For Jason's Machete">
				<property name="group_name" value="quest_ToolsOfCitizenship" />
				<property name="offer" value="The Trader mentioned he has a machete with the name Jason carved into the handle. This bloody machete was found near a lake at Camp Crystal and is rumored to have once been used by an infamous serial killer. Collect 100 Mums for the Trader's Mum, and receive this famous machete." />
				<property name="name" value="Quest to craft Jason's Machete" />
				<property name="subtitle_key" value="Craft the +Writ Of Jason" />
				<property name="description_key" value="questJasonsMachete" />
				<property name="icon" value="ui_game_symbol_map_trader" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="veryeasy" />
				<property name="shareable" value="false" />
				<property name="repeatable" value="true" />
	
				<objective type="FetchKeep" id="resourceCropChrysanthemumPlant" value="100" phase="1" />
				<objective type="FetchKeep" id="resourcePaper" value="1" phase="1" />
				<objective type="Craft" id="+Writ Of Jason" value="1" phase="2" />		

				<reward type="Exp" value="1500" />
			</quest>
			<quest id="+Reward of Jason's Machete">
				<property name="group_name" value="quest_ToolsOfCitizenship" />
				<property name="offer" value=""/>
				<property name="name" value="Honor the Trader's mother with the Mums you've collected. Obtain your used machete from the Trader." />
				<property name="subtitle_key" value="Reward of Jason's Machete" />
				<property name="description_key" value="questRewardJasonsMachete" />
				<property name="icon" value="ui_game_symbol_map_trader" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="easy" />
				<property name="shareable" value="false" />
				<property name="repeatable" value="true" />

				<objective type="Goto" id="trader" value="5" phase="2" />	
				<objective type="InteractWithNPC">
					<property name="phase" value="3" />
				</objective>
				
				<reward type="Item" id="+White River Citizen Card" value="1" />	<!-- This makes the quest repeatable -->						
				<reward type="Item" id="Jason's Machete" value="2-6" />
				<reward type="Item" id="+Sealed Jason's Crate" value="1" />
				<reward type="Item" id="pouredConcreteBlock" value="10-100" />	
				<reward type="Exp" value="3000" />
				<reward type="SkillPoints" value="1" />					
			</quest>
	</append>
</config>
